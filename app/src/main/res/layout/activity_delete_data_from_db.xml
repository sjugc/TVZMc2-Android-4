<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:background="@color/background"
              tools:context="com.ivankocijan.tutorial3.app.activities.DeleteFromDbActivity">

    <EditText
        android:id="@+id/edit_text_name_to_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColorHint="@android:color/black"
        android:hint="User name"/>


    <Button
        android:id="@+id/button_delete_from_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Delete"
        />

    <TextView
        android:text="Delete status"
        android:id="@+id/delete_user_status"
        android:padding="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
